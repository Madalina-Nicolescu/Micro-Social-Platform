
@{
    ViewBag.Title = "Show";
}

<h2>Show</h2>

<a href="/Posts/Index">Inapoi la postari</a>
<br />

<div class="panel panel-default">
    <div class="panel-body">
        Postare: <strong>@ViewBag.Post.Content</strong>
        <br />
        <span class="label label-success">@ViewBag.Post.Date</span>
        <a class="btn btn-success pull-left" href="/Posts/Edit/@ViewBag.Post.PostId">Modifica articol</a>
        <form method="post" action="/Posts/Delete/@ViewBag.Post.PostId">
            @Html.HttpMethodOverride(HttpVerbs.Delete)
            <button class="btn btn-danger pull-right" type="submit">
                Sterge
                postare
            </button>
        </form>
    </div>
</div>



@foreach (var comm in ViewBag.Post.Comments)
{
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div>
                    <p>@comm.Content</p>
                    <small class="pull-right">@comm.Date</small>
                </div>
                <div style="display: inline-block; float : left; margin-right: 15px">
                    <a class="glyphicon glyphicon-pencil"
                       href="/Comments/Edit/@comm.CommentId"></a>
                </div>
                <div style="display: inline-block; float : left">
                    <form method="post" action="/Comments/Delete/@comm.CommentId">
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <button class="glyphicon glyphicon-trash" style="border: none;
    background: transparent" type="submit"></button>
                    </form>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </div>
    <hr />
}

<div class="container">
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">
            <div class="panel">
                <form method="post" action="/Comments/New">
                    <div class="panel-body">
                        <input type="hidden" name="PostId"
                               value="@ViewBag.Post.PostId" />
                        <label>Continut comentariu</label>
                        <br />
                        <textarea class="form-control" name="Content"></textarea>
                        <br />
                        <button class="btn btn-success " type="submit">
                            Adauga
                            comentariu
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
