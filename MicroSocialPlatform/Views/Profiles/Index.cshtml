@model MicroSocialPlatform.Models.ApplicationUser
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <br />
    <h2 style="text-align:center">@ViewBag.User.UserName</h2>
    <br />
    @if (ViewBag.ProfileDescription != null)
     {
        <h5 style="text-align:center"><strong>@ViewBag.ProfileDescription</strong></h5>
        <br />
        <a class="glyphicon glyphicon-edit" href="/Profiles/Edit/"> Editeaza profil!</a>
     }
    else
    {
        <a class="glyphicon glyphicon-edit " href="/Profiles/Edit/" style="text-align:center;display:block"> Adauga descriere</a>
        <br />
        <br />
    }
    <hr />
    <br />
    <br />
</div>



<div class="container">

    @if (ViewBag.FrReqCount != 0)
    {
        foreach (var fr in ViewBag.FriendshipRequests)
        {
            <div class="row">
                <br />
                <p>Utilizatorul @fr.User1.UserName ti-a trimis o cerere de prietenie </p>

                <form method="post" action="/Users/AcceptFriendship">
                    <input type="hidden" name="FriendId" value="@fr.FriendId" />
                    <button type="submit" class="btn btn-success pull-left"><span class="glyphicon glyphicon-ok"></span> Accepta</button>
                </form>
                <form method="post" action="/Users/DeclineFriendship/@fr.FriendId">
                    @Html.HttpMethodOverride(HttpVerbs.Delete)
                    <button class="btn btn-danger pull-right" type="submit">
                        <span class="glyphicon glyphicon-remove"></span>
                        Respinge
                    </button>
                </form>
            </div>
        }
    }


</div>

<br />
<br />

<ul class="nav nav-tabs">
    <li class="active"><a href="#">Postari</a></li>
    <li><a href="/Profiles/ShowFriends/@ViewBag.User.Id">Prieteni<span class="badge">@ViewBag.Count</span></a></li>
</ul>

<br />
<br />

@foreach (var post in ViewBag.Posts)
{
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="panel panel-default col-sm-8">
            <div class="panel-body">
                <br /><strong>@post.Content</strong>
                <br />
                <br />
                <div class="panel-footer">
                    <a class="glyphicon glyphicon-comment" href="/Posts/Show/@post.PostId"></a>
                </div>
            </div>
        </div>
        <div class="col-sm-2"></div>
    </div>

}



