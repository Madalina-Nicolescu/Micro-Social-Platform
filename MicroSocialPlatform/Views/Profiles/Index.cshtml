@model MicroSocialPlatform.Models.ApplicationUser
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <h2>@ViewBag.User.UserName</h2>
        </div>
        <div class="col-sm-4">
            <br />
            <a class="btn btn-primary pull-right" style="background-color: #5680E9" href="/Posts/New">Adauga postare</a>
        </div>
        <br />
        @if (ViewBag.ProfileDescription != null)
        {
            <h5 class="col-sm-8"><strong>@ViewBag.ProfileDescription</strong></h5>
            <br />
        }
        else
        {
            <a class="glyphicon glyphicon-edit" href="/Profiles/Edit/@ViewBag.User.Id"> Adauga descriere</a>
            <br />
            <br />
        }
        <br />
        <br />
    </div>
</div>


<div class="container">

    @if (ViewBag.FrReqCount != 0)
    {
        foreach (var fr in ViewBag.FriendshipRequests)
        {
            <div class="row">
                <p>Utilizatorul @fr.User1.UserName ti-a trimis o cerere de prietenie </p>
                   
                    <form method="post" action="/Users/AcceptFriendship">
                        <input type="hidden" name="FriendId" value="@fr.FriendId" />
                        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> Accepta</button>
                    </form>
                    <form method="post" action="/Users/AcceptFriendship">
                        <input type="hidden" name="FriendId" value="@fr.FriendId" />
                        <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Refuza</button>
                    </form>
            </div>
        }
    }


</div>

<br />
<br />
@foreach (var post in ViewBag.Posts)
{
    <div class="panel panel-default">
        <div class="panel-body">
            <br /><strong>@post.Content</strong>
            <br />
            <div class="panel-footer">
                <a class="glyphicon glyphicon-comment" href="/Posts/Show/@post.PostId"></a>
            </div>
        </div>
    </div>
}

