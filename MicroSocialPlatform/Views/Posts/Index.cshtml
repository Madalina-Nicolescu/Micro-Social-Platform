
@{
    ViewBag.Title = "Index";
}
<h1>@ViewBag.Message</h1>

<br />

<h2>Postari</h2>

<a class="btn btn-primary pull-left" href="/Posts/New">Adauga postare</a>

<a class="btn btn-info pull-right" href="/Groups/Index">Afisare grupuri</a>
<br />

<hr />

@foreach(var post in ViewBag.Posts)
{
<div class="panel panel-default">
    <div class="panel-body">
        Continut postare:<br /><strong>@post.Content</strong>
        <br />
        <!--<span class="label label-success">@post.Date</span>-->
        @if (post.GroupId == 1)
        {
            <i class="glyphicon glyphicon-user"></i> <i>postare scrisa de</i>
            <strong> @post.User.UserName </strong>
        }
        else
        {
            <i class="glyphicon glyphicon-user"></i> <i>postare scrisa de</i>
            <strong> @post.User.UserName </strong> <i> in <a href="/Groups/Show/@post.GroupId"> @post.Group.GroupName</a></i>
        }


        <div class="panel-footer">
            <a class="btn btn-sm btn btn-info" href="/Posts/Show/@post.PostId">Afiseaza postarea</a>
        </div>
    </div>
</div>
}