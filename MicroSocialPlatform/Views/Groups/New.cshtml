
@{
    ViewBag.Title = "New";
}


<br />
<a class="btn btn-primary pull-right" style="background-color: #5680E9" href="/Groups/Index">Inapoi la grupuri</a>
<a class="btn btn-primary pull-right" style="background-color: #5680E9" href="/Posts/Index">Inapoi la postari</a>
<br />
<br />
<br />
<div class="row">
    <div class="col-sm-2"></div>
    <div class="panel panel-default col-sm-8" style="text-align: center; width: 70%; margin-left: 15%; display:inline">
        <div class="panel-body">

            <form method="post" action="/Groups/New">

                @Html.Hidden("UserId")

                @Html.Label("GroupName", "Numele grupului")
                <br />
                @Html.TextBox("GroupName", null, new { @class = "form-control" })
                <br />
                @Html.ValidationMessage("GroupName", null, new { @class = "text-danger" })
                <br />
                @Html.Label("GroupDescription", "Descriere grup")
                <br />
                @Html.TextArea("GroupDescription", null, new { @class = "form-control" })

                @Html.ValidationMessage("GroupDescription", "", new { @class = "text-danger" })
                <br />
                <button class=" btn btn-success" type="submit">Adauga grup</button>
            </form>


        </div>
    </div>
    <div class="col-sm-2"></div>
</div>

