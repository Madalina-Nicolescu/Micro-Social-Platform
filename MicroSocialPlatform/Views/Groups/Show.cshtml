@model BDProiect.Models.Group
@{
    ViewBag.Title = "Show";
}

<br />
<br />
<a class="btn btn-primary pull-right" href="/Groups/Index">Inapoi la grupuri</a>
<a class="btn btn-primary pull-right" href="/Posts/Index">Inapoi la postari</a>
<br />
<br />
<div class="panel panel-default">
    <div class="panel-heading"><strong>@ViewBag.Group.GroupName</strong></div>
    <div class="panel-body">
        Descriere grup: <br /><strong>@ViewBag.Group.GroupDescription</strong>
        <br /><br />
        @if (ViewBag.afisareButoane)
        {
            <a class="btn btn-success pull-left" href="/Groups/Edit/@ViewBag.Group.GroupId">Modifica grup</a>
            <form method="post" action="/Groups/Delete/@ViewBag.Group.GroupId">
                @Html.HttpMethodOverride(HttpVerbs.Delete)
                <button class="btn btn-danger pull-right" type="submit">
                    Sterge
                    grup
                </button>
            </form>
        }
    </div>
</div>




@foreach (var post in ViewBag.Group.Posts)
{
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div>
                    <p>@post.Content</p>
                    <small class="pull-right">@post.Date</small>
                </div>

                @if (post.UserId == ViewBag.UserId)
                {
                    <div style="display: inline-block; float : left; margin-right: 15px">
                        <a class="glyphicon glyphicon-pencil"
                           href="/Posts/Edit/@post.PostId"></a>
                    </div>
                    <div style="display: inline-block; float : left">
                        <form method="post" action="/Posts/Delete/@post.PostId">
                            @Html.HttpMethodOverride(HttpVerbs.Delete)
                            <button class="glyphicon glyphicon-trash" style="border: none;
                            background: transparent" type="submit"></button>
                        </form>
                    </div>
                    <div class="col-md-2"></div>
                }
