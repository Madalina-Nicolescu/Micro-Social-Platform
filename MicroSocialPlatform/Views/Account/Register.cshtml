@model MicroSocialPlatform.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
<div class="form-group">
    <p class="col-md-2"><strong>Last Name</strong></p>
    @Html.LabelFor(m => m.LastName, new { @class = "hidden" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
    </div>
</div>
    <div class="form-group">
        <p class="col-md-2"><strong>First Name</strong></p>
        @Html.LabelFor(m => m.FirstName, new { @class = "hidden" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <p class="col-md-2"><strong>Email</strong></p>
        @Html.LabelFor(m => m.Email, new { @class = "hidden" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <p class="col-md-2"><strong>Birth Date</strong></p>
        @Html.LabelFor(m => m.BirthDate, new { @class = "hidden" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <p class="col-md-2"><strong>City</strong></p>
        @Html.LabelFor(m => m.City, new { @class = "hidden" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <p class="col-md-2"><strong>Who can see your profile?</strong></p>
        @Html.LabelFor(m => m.Visibility, new { @class = "hidden" })
        <div class="col-md-10">
            Everyone
            @Html.RadioButtonFor(m => m.Visibility, true)
        </div>
        <div class="col-md-10">
            Just my friends
            @Html.RadioButtonFor(m => m.Visibility, false)
        </div>
    </div>
    <div class="form-group">
        <p class="col-md-2"><strong>Password</strong></p>
        @Html.LabelFor(m => m.Password, new { @class = "hidden" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <p class="col-md-2"><strong>Confirm Paaword</strong></p>
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "hidden" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
