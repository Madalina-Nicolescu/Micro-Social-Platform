<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-fixed-top nav_menu" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CarutEscu", "Index", "Posts", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (User.IsInRole("Admin"))
                {
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Afisare postari", "Index", "Posts")</li>
                    <li>@Html.ActionLink("Adaugare postare", "New", "Posts")</li>
                    <li>@Html.ActionLink("Afisare grupuri", "Index", "Groups")</li>
                    <li>@Html.ActionLink("Adaugare grup", "New", "Groups")</li>
                    <li>@Html.ActionLink("Afisare useri", "Index", "Users")</li>
                </ul>
                }
                @if (User.IsInRole("Editor"))
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Afisare postari", "Index", "Posts")</li>
                
                        <li>@Html.ActionLink("Afisare grupuri", "Index", "Groups")</li>
                       
                    </ul>
                }
                @if (User.IsInRole("User"))
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Afisare postari", "Index", "Posts")</li>
                        <li>@Html.ActionLink("Adaugare postare", "New", "Posts")</li>
                        <li>@Html.ActionLink("Afisare grupuri", "Index", "Groups")</li>
                        <li>@Html.ActionLink("Adaugare grup", "New", "Groups")</li>
                    </ul>
                }

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer-position">
            <p>&copy; CarutEscu: connect to people you don't like</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
